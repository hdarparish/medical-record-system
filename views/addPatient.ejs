<%- include ('./header.ejs') -%>
<main>
    <div class="content">
        <h3>Patient Details</h3>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Add Patient</button>
        <form class="hospital-form" method="POST">
            <label for="ohip-number">Health Card Number</label>
            <input type="text" id="ohip-number" name="ohip-number" value="<%= health_number%>"  required >

            <label for="first-name">First Name</label>
            <input type="text" id="first-name" >

            <label for="last-name">Last Name</label>
            <input type="text" id="last-name">

            <label>Date of birth
            <input type="date" name="date-of-birth">>
            </label>

            <label for="age">Age</label>
            <input type="text" id="age">

            <label for="gender">Gender</label>
            <input type="text" id="gender" >
            
            <label for="bloodgroup">Blood Group</label>
            <input type="text" id="bloodgroup">

            <label for="email">Email</label>
            <input type="text" id="email">

            <label for="mobile">Mobile</label>
            <input type="text" id="mobile">

            <label for="address">Address</label>
            <input type="text" id="address">

            <label for="reason">Reason of Visit</label>
            <textarea id="reason"></textarea>

            <input type="submit" value="Submit" id="submit_btn">    
        </form>                   
    </div>
</main>

<!--Footer-->
<footer>copyright&copy;Hope Clinic 2020</footer>
</body>

</html>