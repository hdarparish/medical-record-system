<%- include ('./header.ejs') -%>
<main>
  <div class="content">
    <h3>Patient Profile</h3>


    <% if (patientProfile.length) {%>
    <table class="table table-striped">
      <thead>
        <tr>

          <th scope="col">OHIP</th>
          <th scope="col">Last Name</th>
          <th scope="col">First Name</th>
          <th scope="col">Doctor ID</th>
          <th scope="col">Doctor</th>
          <th scope="col">Reason of Visit</th>
        </tr>
      </thead>
      <tbody>

        <tr>
          <th scope="row">
          <td><%= patientProfile.ohip %></td>
          </th>

          <td><%= patientProfile.last_name %></td>
          <td><%= patientProfile.first_name %></td>
          <td><%= patientProfile.doctor_id %></td>
          <td><%= patientProfile.last_name %></td>
          <td><%= patientProfile.reason %></td>
        </tr>
      </tbody>

    </table>
    <% } %>
    <div class="sub-content">

      <h3>Prescription</h3>

      <form class="hospital-form" method="POST" action="/addPrescription">
        <label for="ohip-number">Health Card Number</label>
        <input type="text" id="ohip-number" name="ohip-number" value="<%= health_number%>" required>

        <label for="first-name">First Name</label>
        <input type="text" id="first_name" name="first_name">

        <label for="last-name">Last Name</label>
        <input type="text" id="last_name" name="last_name">

        <label for="age">Age</label>
        <input type="text" id="age">

        <label for="gender">Gender</label>
        <input type="text" id="gender">

        <label for="prescription">Prescription</label>
        <textarea id="prescription"></textarea>


        <input type="submit" value="Submit" id="submit_btn">
      </form>
    </div>

    <form class="form-inline" action="/viewPatientProfile" method="GET">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick=>View Patient</button>
    </form>

    <form class="form-inline" action="/EditPatientProfile" method="GET">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick=>Edit Patient</button>
    </form>

    <form class="form-inline" action="/viewDiagnosticReport" method="GET">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick=>View Diagnostic Report</button>
    </form>

    <form class="form-inline" action="/viewLabReport" method="GET">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick=>View Lab Report</button>
    </form>

  </div>

</main>

</div>

<!--Footer-->
<footer>copyright&copy;Hope Clinic 2020</footer>

</body>

</html>