<%- include ('./adminHeader.ejs') -%>

<div class="container">
        <h3>Edit User Profile</h3>
        <form class="form-inline" method="POST" action="/admin/searchUser">
            <div class="form-group mx-sm-0 mb-2">
                <label for="username" class="sr-only">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>
        
        <form method="POST" action="/admin/editExitstingUsers">
            <label for="ohip-number">Username</label>
            <input type="text" class="form-control" id="username" name="userName" value="<%= users.username %>" readonly>
    
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= users.email %>" required>
    
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password"  name="password" value="<%= users.password %>" required>

            <label>Admin Access</label>
            <select id="credential" class="form-control" name="credential" required>
                <option selected ></option>
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>

            <input type="submit" class="btn btn-primary" value="Save" id="submit_btn">
        </form>

</div>
