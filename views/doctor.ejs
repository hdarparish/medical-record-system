<%- include ('./header.ejs') -%>
<main>
    <div class="content">
                      
        <h3>Doctor Details</h3>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Add Doctor</button>
        <!-- <input type="submit" value="Add Patient" id="addpatient_btn"></div> -->
       
        <form class="hospital-form">
            <label for="first-name">First Name</label>
            <input type="text" id="first-name">

            <label for="last-name">Last Name</label>
            <input type="text" id="last-name">

            <label for="specialization">Specialization</label>
            <input type="text" id="specialization">

            <label for="department">Department</label>
            <input type="text" id="department">

            <label>Date of birth
            <input type="date" name="date-of-birth">
            </label>

            <label for="age">Age</label>
            <input type="text" id="age">

            <label for="gender">Gender</label>
            <input type="text" id="gender">

            <label for="email">Email</label>
            <input type="text" id="email">

            <label for="mobile">Mobile</label>
            <input type="text" id="mobile">

            <label for="address">Address</label>
            <input type="text" id="address">
          
            <input type="submit" value="Save" id="submit_btn">    
        </form>         

    </div>
</main>

<!--Footer-->
<footer>copyright&copy;Hope Clinic 2020</footer>
</body>

</html>