<%- include ('./header.ejs') -%>
<main>
    <div class="content">
        <h3>Patient Profile</h3>


        <% if (patientProfile.length > 0) {%>
        <table class="table table-striped">
            <thead>
                <tr>

                    <th scope="col">OHIP</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">First Name</th>
