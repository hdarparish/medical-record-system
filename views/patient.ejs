<%- include ('./header.ejs') -%>
<main>
    <div class="content">
     
        <h3>Patient Details</h3>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Add Patient</button>
        <% if(patient) { %>
        <form class="hospital-form" method="POST">
            <label for="ohip-number">Health Card Number</label>
            <input type="text" id="ohip-number" name="ohip-number" value="<%= patient.ohip %>" required >

            <label for="first-name">First Name</label>
            <input type="text" id="first-name" value="<%= patient.first_name %>">

            <label for="last-name">Last Name</label>
            <input type="text" id="last-name" value="<%= patient.last_name %>">>

            <label>Date of birth
            <input type="date" name="date-of-birth" value="<%= patient.dateof_birth.toDateString() %>">>
            </label>

            <label for="age">Age</label>
            <input type="text" id="age">

            <label for="gender">Gender</label>
            <input type="text" id="gender"  value="<%= patient.gender %>">
            
            <label for="bloodgroup">Blood Group</label>
            <input type="text" id="bloodgroup">

            <label for="email">Email</label>
            <input type="text" id="email" value="<%= patient.email%>">

            <label for="mobile">Mobile</label>
            <input type="text" id="mobile" value="<%= patient.phone_number%>">

            <label for="address">Address</label>
            <input type="text" id="address" value="<%= patient.address%>">

            <label for="reason">Reason of Visit</label>
            <textarea id="reason"></textarea>

            <input type="submit" value="Submit" id="submit_btn">    
        </form>         
        <% } %>            
    </div>
</main>

<!--Footer-->
<footer>copyright&copy;Hope Clinic 2020</footer>
</body>

</html>