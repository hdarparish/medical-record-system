<%- include ('./adminHeader.ejs') -%>

<div class="container">
        <h3>Edit Patient Profile</h3>
        <form class="form-inline" method="POST" action="/searchPatient">
            <div class="form-group mx-sm-0 mb-2">
                <label for="ohip-number" class="sr-only">Health Card Number</label>
                <input type="text" class="form-control" id="patientId" name="patientId" placeholder="Patient ID" maxlength="9"
                    required>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>
        
        <form method="POST" action="/editPatient">
            <label for="patientId">Health Card Number</label>
            <input type="text" class="form-control" id="patientId" name="patientId" placeholder="Patient ID" value="<%= patientProfile.ohip %>" readonly>

            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="<%= patientProfile.first_name %>" required>

            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="<%= patientProfile.last_name %>" required>

            <label for="birthDay">Date of birth</label>
            <input type="date" class="form-control" id="birthDay" name="birthDay" value="<%= patientProfile.dateof_birth %>" required>

            <label for="birthDay1">Date of birth</label>
            <input type="text" class="form-control" id="birthDay1" name="birthDay1" value="<%= patientProfile.dateof_birth %>" required>

            <label for="gender">Gender</label>
            <input type="text" class="form-control" id="gender" name="gender" value="<%= patientProfile.gender %>" required>

            <label for="email">Email</label>
            <input type="text" class="form-control" id="email" name="email" value="<%= patientProfile.email %>" required>

            <label for="phoneNumber">Mobile</label>
            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= patientProfile.phone_number %>" required>

            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="address" value="<%= patientProfile.address %>" required>

            <input type="submit" class="btn btn-primary" value="Save" id="submit_btn">
        </form>

</div>
